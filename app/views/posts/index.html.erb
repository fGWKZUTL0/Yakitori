<div class="main posts-new">
   <div class="container">
      <h2 class="form-heading ms-2">投稿する</h2>
      <%= form_tag("/posts/create") do %>
      <div class="form">
         <table class="table table-borderless">
            <tbody>
               <tr>
                  <td class="table_title">
                     名前
                  </td>
                  <td>
                     <div class="form-body">          
                        <input type="text" name="user_name">
                     </div>
                  </td>
               </tr>
               <tr>
                  <td class="table_title">
                     内容
                  </td>
                  <td>
                     <div class="form-body">
                        <textarea name="content"></textarea>
                     </div>
                  </td>
               </tr>
               <tr>
                  <td class="table_title">
                     <input type="submit" class="btn btn-primary btn-sm rounded-pill" value="投稿">
                  </td>
               </tr>
            </tbody>
         </table>
      </div>
      <% end %>
  </div>
</div>
<table class="table table-hover">
   <% @posts.each do |post| %>
      <tbody>
            <tr>
               <td id="posts" onclick="jumpToShow(<%= post.id %>)">
                  <b><%= post.user_name %></b> <br>
                  <%= nl2br(post.content) %> <br>
                  <%= post.created_at %>
               </td>
            </tr>
      </tbody>
   <% end %>
</table>

<script>
   function jumpToShow(id){
      location = '/posts/' + id;
   }
</script>
