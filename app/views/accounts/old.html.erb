<div class="main accounts-sign-up">
   <div class="container">
      <h2 class="form-heading ms-2">サインアップ</h2>
      <%= form_with model: @account do |f| %>
         <div class="form">
            <table class="table table-borderless">
               <tbody>
                  <tr>
                     <td class="col-6">
                        <div class="mb-3">
                           <%= f.label :email, { class: "form-label"} %>
                           <%= f.text_field :email, { class: "form-control", placeholder: "メールアドレス" } %>
                        </div>
                     </td>
                     <td class="col-6">

                     </td>
                  </tr>
                  <tr>
                     <td class="col-6">
                        <div class="mb-3">
                           <%= f.label :password, { class: "form-label"} %>
                           <%= f.text_field :password, { class: "form-control" } %>
                        </div>
                     </td>
                     <td class="col-6">

                     </td>
                  </tr>
                  <tr>
                     <td class="col-6">
                        <%= f.submit '登録', class: "btn btn-primary rounded-pill" %>
                     </td>
                     <td class="col-6">

                     </td>
                  </tr>
               </tbody>
            </table>
         </div>
      <% end %>
  </div>
</div>