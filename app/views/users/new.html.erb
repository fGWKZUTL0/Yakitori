<div class="main accounts-sign-up">
   <div class="container">
      <h2 class="form-heading ms-2">サインアップ</h2>
      <%= form_with model: @user, url: signup_path, local: true do |f| %>
         <div class="form">
          <% if @user.errors.any? %>
              <strong><%= @user.errors.count %>個のエラーがあります。</strong>
              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            <% end %>
            <table class="table table-borderless">
               <tbody>
                  <tr>
                     <td class="col-6">
                        <div class="mb-3">
                           <%= f.label :name, { class: "form-label"} %>
                           <%= f.text_field :name, { class: "form-control", placeholder: "user name" } %>
                        </div>
                     </td>
                     <td class="col-6">

                     </td>
                  </tr>
                  <tr>
                     <td class="col-6">
                        <div class="mb-3">
                           <%= f.label :email, { class: "form-label"} %>
                           <%= f.text_field :email, { class: "form-control", placeholder: "メールアドレス" } %>
                        </div>
                     </td>
                     <td class="col-6">

                     </td>
                  </tr>
                  <tr>
                     <td class="col-6">
                        <div class="mb-3">
                           <%= f.label :password, { class: "form-label"} %>
                           <%= f.password_field :password, { class: "form-control" } %>
                        </div>
                     </td>
                     <td class="col-6">

                     </td>
                  </tr>
                  <tr>
                     <td class="col-6">
                        <div class="mb-3">
                           <%= f.label "password confirmation", { class: "form-label"} %>
                           <%= f.password_field :password_digest, { class: "form-control" } %>
                        </div>
                     </td>
                     <td class="col-6">

                     </td>
                  </tr>
                  <tr>
                     <td class="col-6">
                        <%= f.submit '登録', class: "btn btn-primary rounded-pill" %>
                        
                     </td>
                     <td class="col-6">

                     </td>
                  </tr>
               </tbody>
            </table>
         </div>
      <% end %>
  </div>
</div>