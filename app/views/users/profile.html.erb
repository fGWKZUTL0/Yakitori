<%= turbo_frame_tag "profile-modal" %>
<div class="main profile">
   <%= render 'shared/profile', this_user: @this_user %>
</div>
<%= form_with url: "/profile/#{@this_user.username}", data: { turbo_frame: "timeline", controller: "profile"}, method: "post",
   class: "form" do |f| %>
  <input type="hidden" name="tab_type" data-profile-target="tabType" value="posts">
  <div class="mt-2">
    <ul class="nav nav-pills nav-fill" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <button
          data-action="click->profile#changePosts profile#submit"
          class="nav-link active"
          id="user-posts-tab"
          data-bs-toggle="tab"
          data-bs-target="#posts"
          type="button"
          role="tab"
          aria-controls="posts"
          aria-selected="true"
        >
          投稿
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button
          data-action="click->profile#changeReplies profile#submit"
          class="nav-link"
          id="user-replies-tab"
          data-bs-toggle="tab"
          data-bs-target="#replies"
          type="button"
          role="tab"
          aria-controls="replies"
          aria-selected="false"
        >
          返信
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button
          data-item-id-param="3"
          class="nav-link"
          id="contact-tab"
          data-bs-toggle="tab"
          data-bs-target="#contact"
          type="button"
          role="tab"
          aria-controls="contact"
          aria-selected="false"
        >
          画像
        </button>
      </li>
      <li class="nav-item" role="presentation">
        <button
          data-action="click->profile#changeLikes profile#submit"
          class="nav-link"
          id="contact-tab"
          data-bs-toggle="tab"
          data-bs-target="#contact"
          type="button"
          role="tab"
          aria-controls="contact"
          aria-selected="false"
        >
          いいね
        </button>
      </li>
    </ul>
  </div>
<% end %>
<%= render partial: 'shared/TimeLine', locals:{ 'posts': @posts, 'users': @users } %>