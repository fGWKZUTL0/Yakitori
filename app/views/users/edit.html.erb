<%= turbo_frame_tag "profile-modal" do %>
  <div class="modal fade" data-controller="modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">編集する</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <%= form_with model: @user,url: { controller: 'users', action: 'update', id: @user.id}, html: { multipart: true, class: "form" }, local: true do |f| %>
          <div class="modal-body">
            <div>
              <label>
                icon
                <input type="file" name="icon" accept="image/jpeg, image/png, image/jpg, image/gif" >
              </label>
            </div>
            <div>
              <textarea type="text" name="bio"><%= @user.bio %></textarea>
            </div>
            <input type="hidden" name="username" value="<%= current_user.username %>">
            <input class="btn btn-primary rounded-pill" type="submit" value="更新" data-bs-dismiss="modal" aria-label="Close">
          </div>
        <% end %>
