<div class="mb-2">
  <%= render 'shared/post', post: post, this_user: this_user, users: users %>
</div>
<turbo-frame id="parent_is_<%= post.id %>">
</turbo-frame>
<% get_childs(post).each do |child| %>
  <div class="ms-4">
    <%= render 'shared/reply_post', post: child, this_user: users.find_by(username: child.username), users: users %>
  </div>
<% end %>