<%
    this_user = @users.find_by(username: post.username)
%>

<div class="row" id="post_#{post.id}">
  <div class="col-2">
    <%= link_to image_tag(this_user.icon.thumb100.url, class: "rounded-circle"), "/posts/#{post.username}/profile" %>
  </div>
  <div class="col-10">
    <p class="mb-0"><%= this_user.name %><%= link_to ('@' + post.username), "/posts/#{post.username}/profile", method: :get, class: "text-decoration-none"%></p>
    <div class="content" onclick="jumpToThis(<%= post.id %>)"><%= nl2br(post.content) %></div>
    <% if current_user.liked_by?(post) %>
      <%= link_to "♡#{post.likes.count}", post_likes_path(post), method: :delete , remote: true,class: "link-danger" %>
    <% else %>
      <%= link_to "♡#{post.likes.count}", post_likes_path(post), class: "link-secondary", method: :get, remote: true %>
    <% end %>
    <%= post.created_at %>
  </div>
</div>