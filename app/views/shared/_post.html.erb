<%
  this_user = @users.find_by(username: post.username)
%>
<div class="row" id="posts">
  <div class="col-2">
    <%= link_to image_tag(this_user.icon.thumb100.url, class: "rounded-circle"), "/posts/#{post.username}/profile" %>
  </div>
  <div class="col-1">
  </div>
  <div class="col-9">
    <p class="mb-0"><%= this_user.name %>
    <a class="text-decoration-none" href="/posts/<%= post.username %>/profile">@<%= post.username %></a>
    </p>
    <div class="content" onclick="jumpToThis(<%= post.id %>)"><%= nl2br(post.content) %></div>
    <div class="post_footer">
      <!-- リプライ -->
        <i id="reply_icon" class="fa-regular fa-comment"><!-- ここにコメント --></i>
      <!-- いいね -->
      <% if current_user.liked_by?(post.id) %>
          <%= link_to post_likes_path(post), method: :delete, remote: true, class: "link-danger" do%>
            <i class="fa-solid fa-heart"><%= post.likes.count %></i>
          <% end %>
      <% else %>
          <%= link_to post_likes_path(post), method: :get, remote: true, class: "link-secondary" do %>
            <i class="fa-regular fa-heart"><%= post.likes.count %></i>
          <% end %>
      <% end %>
      <%= post.created_at %>
    </div>
  </div>
</div>
