<div class="container">
   <% posts.each do |post| %>
      <div id="post_<%= post.id %>" class="mb-2">
         <%= render 'shared/post', post: post %>
      </div>
   <% end %>
</div>

<script>
   function jumpToThis(id){
      location = '/posts/' + id
   }

   function jumpToProfile(username){
      location = '/posts/' + username + '/profile'
   }
</script>