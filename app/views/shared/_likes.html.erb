<% if post.username == current_user.username %>
  <%= button_to "♡#{post.likes.count}", "#", disabled: true, method: :get, class: "btn btn-primary rounded-pill" %>
<% elsif post.liked_by?(current_user) %>
  <%= button_to "♡#{post.likes.count}", post_likes_path(post), method: :delete, class: "btn btn-danger rounded-pill" %>
<% else %>
  <%= button_to "♡#{post.likes.count}", post_likes_path(post), method: :get, class: "btn btn-primary rounded-pill" %>
<% end %>