<% if current_user.liked_by?(post) %>
  <%= link_to "♡#{post.likes.count}", post_likes_path(post), method: :delete , remote: true, id: "post_#{post.id}",class: "link-danger" %>
<% else %>
  <%= link_to "♡#{post.likes.count}", post_likes_path(post), id: "post_#{post.id}", class: "link-secondary", method: :get, remote: true %>
<% end %>